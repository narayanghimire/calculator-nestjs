{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./../../../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
    "^@app/calculator(|/.*)$": "<rootDir>/apps/calculator/$1"
  }
}
